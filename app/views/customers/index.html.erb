<%= render 'var' %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <%= link_to new_customer_path, class: "btn btn-outline btn-primary" do %>
        <i class="fa fa-plus"></i> New <%= yield(:current_page).singularize %>
        <% end %>
        <div class="ibox-tools">
          &nbsp;
        </div>
      </div>
      <div class="ibox-content">

        <table id="customers" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Name </th>
              <th>Address</th>
              <th>Contact</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @customers.each do |customer| %>
            <tr>
            <td><%= customer.first_name %> <%= customer.last_name %></td>
              <td><%= customer.address %></td>
              <td><%= customer.contact %></td>
              <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
              <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


  $(function() {


    $('#customers').dataTable({
      "dom": 'T<"clear">lfrtip',
      "sPaginationType": "full_numbers",
      "lengthMenu": [ [10, 25, 50,-1], [10, 25, 50, "All"] ],
      "bProcessing": true,
      "aoColumns": [
      null,
      null,
      null,
      { "bSortable": false },
      { "bSortable": false }
      ]
    });


  });


</script>

<% end %>
