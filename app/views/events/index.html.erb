<%= render 'var' %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
      <%= link_to new_event_path, class: "btn btn-outline btn-primary" do %>
        <i class="fa fa-plus"></i> New <%= yield(:current_page).singularize %>
        <% end %>
        <div class="ibox-tools">
          &nbsp;
        </div>
      </div>
      <div class="ibox-content">

        <table id="events" class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Event title</th>
              <th>Event date</th>
              <th>Customer</th>
              <th>Covers</th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
            <tr>
              <td><%= event.event_title %></td>
              <td><%= event.event_date %></td>
              <td><%= event.customer.name %><br>
                <%= event.customer.contact %>

              </td>
              <td><%= event.covers %></td>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
              <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :javascript do %>

<script type="text/javascript">


  $(function() {


    $('#events').dataTable({
      "dom": 'T<"clear">lfrtip',
      "sPaginationType": "full_numbers",
      "lengthMenu": [ [10, 25, 50,-1], [10, 25, 50, "All"] ],
      "bProcessing": true,
      "aoColumns": [
      null,
      null,
      null,
      null,
      { "bSortable": false },
      { "bSortable": false }
      ]
    });


  });


</script>

<% end %>