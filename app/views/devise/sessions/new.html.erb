<div class="middle-box text-center loginscreen  animated fadeInDown">
	<div>

		<h2>Members Area</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form"}) do |f| %>

			<div class="form-group">
				<%= f.input :email, required: true, autofocus: true, class: "form-control", label: false,  placeholder: "Email" %>
			</div>
			<div class="form-group">
				<%= f.input :password, required: false, class: "form-control", label: false,  placeholder: "Password" %>
			</div>

			<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

			<%= f.button :submit, "Log in", class: "btn btn-primary block full-width m-b" %>
			
			<%= render "devise/shared/links" %>
		<% end %>

	</div>
</div>


